#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('vicinityServer:server');
var http = require('http');
var winston = require('winston');

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '4000');
//var global.VCNT_MNGR_API  = normalizePort(process.env.VCNT_MNGR_API || 'http://api.vicinity.bavenir.eu');
process.env.VCNT_MNGR_API = normalizePort(process.env.VCNT_MNGR_API || 'http://api.vicinity.bavenir.eu');
process.env.VCNT_MNGR_USR = normalizePort(process.env.VCNT_MNGR_USR || "peter.parker@bavenir.eu");
process.env.VCNT_MNGR_PWD = normalizePort(process.env.VCNT_MNGR_PWD || 'test');
process.env.VCNT_MNGR_DB = normalizePort(process.env.VCNT_MNGR_DB || 'mongodb://vicinity_user:Ysq.rvE!(wg#Vp4_@ds060478.mongolab.com:60478/vicinity_neighbourhood_manager');

winston.log('debug', 'Port: ' + port);
winston.log('debug', 'VicinityManagerAPI: ' + process.env.VCNT_MNGR_API);
winston.log('debug', 'VicinityManagerToken: ' + process.env.VCNT_MNGR_USR);
winston.log('debug', 'VicinityManagerToken: ' + process.env.VCNT_MNGR_PWD);
winston.log('debug', 'VicinityManagerDatabase: ' + process.env.VCNT_MNGR_DB);

app.set('port', port);

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      winston.log('error', bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      winston.log('error', bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
